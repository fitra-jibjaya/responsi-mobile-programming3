<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#979797"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_brg"
                android:layout_width="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="46dp"
                android:layout_height="201dp"
                android:background="@drawable/pokemon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:padding="2dp"
                android:textColor="@color/black"
                android:text="5"
                android:textSize="10sp"
                app:drawableEndCompat="@drawable/ic_star" />

            <TextView
                android:id="@+id/nm_brg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_brg"
                android:layout_marginStart="15dp"
                android:text="Pokemon Battle"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/jn_brg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nm_brg"
                android:layout_marginStart="15dp"
                android:text="Game"
                android:textColor="#979797" />

            <TextView
                android:id="@+id/harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/jn_brg"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="15dp"
                android:text="Rp. XXX.XXX.XXX"
                android:textColor="#464646" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"/>

</androidx.constraintlayout.widget.ConstraintLayout>